<!-- NAV BAR -->
<nav class="navbar navbar-expand-sm bg-light navbar-light">
    <ul class="navbar-nav">
        <li class="nav-item active">
            <a class="nav-link" href="/"> Mongo Scraper </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/"> Home </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/saved"> Saved Articles </a>
        </li>
    </ul>
</nav>
<!-- END NAV BAR -->

<div class="container">

    <!-- START OF JUMBOTRON -->
    <div class="col-md-12 jumbotron">
        <div class="text-center">
            <h1> Saved Articles </h1>
            <h3> Your Saved Articles </h3>
        </div>
    </div>
    <!-- END OF JUMBOTRON -->

    <!-- START OF ARTICLE SECTION -->
    <div class="col-md-12">
        {{#if article}} {{#each article}}

        <div class="card">
            <div class="card-header">
                <h5> {{this.title}}</h5>
            </div>
            <div class="card-body">
                <p class="card-summary"> {{this.summary}} </p>
                <a href={{this.link}}> {{this.link}} </a>
                <br>
                <button type="button" class="btn btn-primary" id="addNote" data-id={{this._id}}> Add Note </button>
                <button type="button" class="btn btn-warning" id="deleteArticle" data-id={{this._id}}> Delete </button>
            </div>
        </div>

        {{/each}} {{else}}
        <div class="card">
            <div class="card-body">
                <h5> You Have No Articles Saved </h5>
            </div>
        </div>

        {{/if}}
    </div>
    <!-- END OF ARTICLE SECTION -->

</div>