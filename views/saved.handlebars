<!-- START OF JUMBOTRON -->
<div class="col-md-12 jumbotron">
    <div class="text-center">
        <h1> Saved Articles </h1>
        <h3> Your Saved Articles </h3>
    </div>
</div>
<!-- END OF JUMBOTRON -->

<div class="container">

    <!-- START OF ARTICLE SECTION -->
    <div class="col-md-12">
        {{#if article}} {{#each article}}

        <div class="card">
            <div class="card-header">
                <h5> {{this.title}}</h5>
            </div>
            <div class="card-body">
                <p class="card-summary"> {{this.summary}} </p>
                <a href={{this.link}}> {{this.link}} </a>
                <br>
                <button type="button" class="btn btn-primary articleNote" data-id={{this._id}} data-noteid={{this.note._id}} data-toggle="modal" data-target="#noteModal">
                    Article Note </button>
                <button type="button" class="btn btn-warning deleteArticle" data-id={{this._id}}> Delete </button>
            </div>
        </div>

        {{/each}} {{else}}
        <div class="card">
            <div class="card-body">
                <h5> You Have No Articles Saved </h5>
            </div>
        </div>

        {{/if}}
    </div>
    <!-- END OF ARTICLE SECTION -->

    <!-- MODAL TO HIDE CHALLENGE AND REDIRECT USER TO PROFILE-->
    <div class="modal fade" id="noteModal" tabindex="-1" role="dialog" aria-labelledby="noteModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="noteModalTitle"> Notes For This Article </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="card-body">
                        <div id="postedNotes"></div>
                    </div>
                    <div class="card-body">
                        <div id="noteTextArea"></div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary saveNote">Save Note</button>
                </div>
            </div>
        </div>
    </div>
    <!-- MODAL TO HIDE CHALLENGE AND REDIRECT USER TO PROFILE-->

</div>